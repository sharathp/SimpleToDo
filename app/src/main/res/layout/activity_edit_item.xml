<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.EditItemActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_item_name"
        style="@style/ToDoFloatingLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tie_item_name"
            style="@style/ToDoFieldLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_todo_item_name" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_item_priority_label"
        style="@style/ToDoFieldLabel"
        android:text="@string/label_item_priority"
        android:layout_below="@id/til_item_name"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_large"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/acs_item_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/priority_list"
        android:layout_alignBaseline="@id/tv_item_priority_label"
        android:layout_toRightOf="@id/tv_item_priority_label"/>

    <TextView
        android:id="@+id/tv_item_duedate_label"
        style="@style/ToDoFieldLabel"
        android:text="@string/label_due_date"
        android:layout_below="@id/tv_item_priority_label"
        android:layout_marginBottom="@dimen/margin_small"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/acs_item_duedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/duedate_list"
        android:layout_alignBaseline="@id/tv_item_duedate_label"
        android:layout_alignLeft="@id/acs_item_priority"
        android:layout_toRightOf="@id/tv_item_duedate_label" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_item_description"
        style="@style/ToDoFloatingLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_duedate_label"
        android:layout_marginBottom="@dimen/margin_normal">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tie_item_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:hint="@string/hint_todo_item_description" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_save_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_todo_save"
        android:contentDescription="@string/label_todo_save"
        android:layout_below="@+id/til_item_description"/>

</RelativeLayout>
