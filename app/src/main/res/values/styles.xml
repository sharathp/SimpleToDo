<resources>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize BaseAppTheme -->
    </style>
    
    <style name="ToDoFieldLabel" parent="TextAppearance.AppCompat.Medium">
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ToDoFloatingLabel" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/ToDoFloatingLabel.TextAppearance.Design.Hint</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ToDoFloatingLabel.TextAppearance.Design.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
